<% layout('/layouts/biolerplate') %>
<%- include('../partials/flash')  %>
<link rel="stylesheet" href="css/title.css">

    <h1 class="text-center old-bazaar-title" >OLD BAZAAR</h1>
    <div class="row">
        <% for(let i of productsObj){ %>
            <div class="mt-3 col-lg-4">
                <div class="card cardd hover-shadow mx-auto" style="width: 18rem;">
                    <img src="<%= i.img %>" class="card-img-top" >
                    <span class="badge rounded-pill bg-light text-dark w-25 position-absolute translate-middle-y" style="top:41%;left:5%"><%=i.avgRating%>  &star; | <%=i.reviews.length%></span>
                    <div class="card-body cardd-body">
                        <h5 class="card-title d-flex justify-content-between align-items-center">
                            <span><%= i.name %></span> 
                            <span class="btn like-btn" product-id="<%=i._id%>">
                                <% if(currentUser && currentUser.wishList.includes(i._id)){ %>
                                    <i class="fas fa-heart"></i>
                                <% } else{ %>
                                    <i class="far fa-heart"></i>
                                <% } %>
                            </span>
                        </h5>
                        <h5 class="card-title"><%= i.price %></h5>
                        <p class="card-text"><%= i.desc %></p>
                        <% if(i.reviews.length){ %>
                            <p class="text-muted"><%=i.reviews.length%> reviews</p>
                        <%}else{%>
                            <p class="text-muted">No reviews</p>
                        <% } %> 
                        <a href="/products/<%= i._id %>" class="btn btn-primary">Show</a>
                        <form action="/user/<%= i._id %>/cart" method="POST" class="d-inline-block">
                            <button class="btn btn-success">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html>

<script src="/js/like.js"></script>