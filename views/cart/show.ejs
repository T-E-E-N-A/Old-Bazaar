<% layout('layouts/biolerplate') %>
<%- include('../partials/flash') %>


<h1 class="text-center">Cart</h1>
<div class="row">
    <% for(let i of user.cart){ %>
        <div class="mt-3 col-lg-4">
            <div class="card cardd mx-auto hover-shadow" style="width: 18rem;">
                <img src="<%= i.img %>" class="card-img-top" >
                <div class="card-body cardd-body">
                    <h5 class="card-title"><%= i.name %></h5>
                    <h5 class="card-title"><%= i.price %></h5>
                    <a href="/products/<%= i._id %>" class="btn btn-primary">Show</a>
                    <a href="/user/myorders" class="btn btn-success">Buy</a>
                    <form action="/user/<%= i._id %>/<%= user._id %>/dlt?_method=DELETE" method="POST" class="d-inline-block my-2">
                        <button>Remove from Cart</button>
                    </form>
                </div>
            </div>
        </div>
    <% } %>
</div>